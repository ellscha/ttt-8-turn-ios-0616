#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Please enter 1-9:"
input = gets.strip
turn (board, input, value="X")


until valid_move(board, index)
  puts "Please enter 1-9:"
  input = gets.strip
  turn (board, input, value="X")
end
