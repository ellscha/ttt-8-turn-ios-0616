#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
move(board, 4, "X")
move(board, 0, "O")

display_board(board)
turn(board)
input = gets.strip

until valid_move(board, index)
  puts "Please enter 1-9:"
  input = gets.strip
end
